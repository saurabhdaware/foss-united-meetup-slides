          import { vitePluginJSXToHTML } from 'vite-plugin-jsx-to-html';
          import rehypeSlug from 'rehype-slug';

          export default defineConfig({
            plugins: [
              mdx({
                rehypePlugins: [rehypeSlug]
              }), // Turns MDX to JSX
